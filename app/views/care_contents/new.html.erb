<h1>ケア内容の登録</h1>

<%= form_with(model: @care_content, local: true) do |f| %>
  <div class="field">
    <%= f.label :preferred_name, "呼ばれ方" %>
    <%= f.text_field :preferred_name %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "緊急連絡先" %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :custom_message, "伝えたいこと" %>
    <%= f.text_area :custom_message %>
  </div>

  <div class="field">
    <%= f.label :message, "メッセージ" %>
    <%= f.text_area :message %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= link_to 'ホームに戻る', root_path %>
